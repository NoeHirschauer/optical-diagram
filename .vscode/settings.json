{
    "editor.rulers"                                  : [90],
    "editor.wordWrapColumn": 90,
    "python.testing.pytestEnabled"                   : true,
    "python.testing.unittestEnabled"                 : false,
    "python.analysis.enablePytestSupport"            : true,
    "python.analysis.languageServerMode"             : "default",
    "python.analysis.inlayHints.callArgumentNames"   : "off",
    "python.analysis.inlayHints.functionReturnTypes" : false,
    "python.analysis.inlayHints.variableTypes"       : false,
    "python.analysis.supportRestructuredText"        : true,
    "python.analysis.diagnosticMode"                 : "openFilesOnly",
    "python.analysis.autoIndent"                     : true,
    "python.analysis.completeFunctionParens"         : true,
    "python.analysis.diagnosticSeverityOverrides"    : {"reportUnusedImport": "information"},
    "betterAlign.surroundSpace"                      : {
                                                        "colon"      : [1,1],
                                                        "assignment" : [1,1],
                                                        "arrow"      : [1,1],
                                                        "comment"    : 2
                                                       },
    // Hide some directories from the explorer view to improve clarity
    "files.exclude": {
        "**/.git"          : true,
        "**/__pycache__"   : true,
        "**/.pytest_cache" : true,
        "**/*.egg-info"    : true,
        "**/.vscode"       : true,
        "pyproject.toml"   : true,
        "ruff.toml"        : true,
    },
    "testing.displayedCoveragePercent"  : "minimum",
    "testing.showCoverageInExplorer"    : false,
    "breadcrumbs.enabled"               : false,
    "python-envs.defaultEnvManager"     : "ms-python.python:conda",
    "python-envs.defaultPackageManager" : "ms-python.python:conda",
    "python-envs.pythonProjects"        : [],
}